<%- include('./partials/head.ejs') %> <%- include('./components/header.ejs') %>
<div
  class="mx-auto max-w-6xl h-full flex justify-center items-center px-5 py-2 space-y-6"
>
  <% if (success) { %>
  <a
    id="download-link"
    class="w-full flex justify-center items-center rounded-md bg-slate-700 p-4 text-sm font-medium text-slate-200 outline-none hover:bg-slate-800 hover:ring-2 hover:ring-slate-600"
    href="<%= filePath %>"
    download="products.csv"
  >
    <%= message %>
  </a>
  <% } else { %>
  <div class="text-red-500 text-sm"><%= message %></div>
  <% } %>
</div>
