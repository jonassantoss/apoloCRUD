<%- include('./partials/head.ejs') %> <%- include('./components/header.ejs') %>
<div class="w-full h-full flex justify-center items-center">
    <div class="flex flex-col space-y-4 bg-white p-4 rounded-md">
      <h1 class="text-2xl text-center text-black">Login</h1>

      <%- include('./components/messages.ejs') %>

      <form method="post" action="/login" 
        class="flex flex-col gap-5 m-6"
       >
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <label class="relative flex flex-col gap-2">
          <input 
            type="text" 
            name="user" 
            class="form__input block w-full p-5 bg-transparent text-black border border-black rounded-md focus:outline-none" 
            placeholder=" " 
          />
          <span 
            class="form__label absolute text-base pointer-events-none left-[0.7rem] top-4 p-1 bg-white text-black transition-all ease-in duration-200" 
            aria-label="Nome de Usuário"
          >
            Nome de Usuário
        </span>
        </label>
        <label class="relative flex flex-col gap-2">
          <input
            type="password"
            name="pswd"
            class="form__input block w-full p-5 bg-transparent text-black border border-black rounded-md focus:outline-none"
            placeholder=" "
          />
          <span 
            class="form__label absolute text-base pointer-events-none left-[0.7rem] top-4 p-1 bg-white text-black transition-all ease-in duration-200" 
            aria-label="Senha"
          >
            Senha
        </span>
        </label>
        <button type="submit" class="bg-slate-700 p-4 rounded-md transition-all duration-500 hover:bg-slate-800">Fazer Login</button>
      </form>
    </div>
</div>
<%- include('./partials/footer.ejs') %>
