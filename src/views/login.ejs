<%- include('./partials/head.ejs') %> <%- include('./partials/header.ejs') %>
<div class="w-full h-full flex justify-center items-center">
    <div class="flex flex-col space-y-4 bg-white p-4 rounded-md">
      <h1 class="text-center">Login</h1>
      <form method="post" action="/login" 
        class="flex flex-col gap-5 m-6"
       >
        <label class="relative flex flex-col gap-2">
          <input 
            type="text" 
            name="user" 
            id="iuser" 
            class="formulario__input block w-full p-5 bg-transparent border border-black rounded-md focus:outline-none" 
            placeholder=" " 
          />
          <span 
            class="formulario__label absolute text-base pointer-events-none left-[0.7rem] top-4 p-1 bg-white transition-all ease-in duration-200" 
            aria-label="Nome de Usuário"
          >
            Nome de Usuário
        </span>
        </label>
        <label class="relative flex flex-col gap-2">
          <input
            type="password"
            name="password"
            id="ipassword"
            class="formulario__input block w-full p-5 bg-transparent border border-black rounded-md focus:outline-none"
            placeholder=" "
          />
          <span 
            class="formulario__label absolute text-base pointer-events-none left-[0.7rem] top-4 p-1 bg-white transition-all ease-in duration-200" 
            aria-label="Senha"
          >
            Senha
        </span>
        </label>
        <button type="submit" class="text-zinc-50 bg-slate-700 p-4 rounded-md transition-all duration-500 hover:bg-slate-800">Fazer Login</button>
      </form>
    </div>
</div>
<%- include('./partials/footer.ejs') %>
