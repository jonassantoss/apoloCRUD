generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(cuid())
  email    String @unique
  password String
  role     String

  @@map("users")
}

model Product {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  price       Float   @default(0.0)
  amount      Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("products")
}
